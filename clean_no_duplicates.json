    },
    {
      "id": 95,
      "category": "آدعية للإنجاب",
      "text": "اللهم ارزقني ذرية صالحة",
      "source": "دعاء عام"
    },
    {
      "id": 96,
      "category": "آدعية عند الضيق",
      "text": "اللهم فرّج همي وكربي",
      "source": "دعاء عام"
    },
    {
      "id": 97,
      "category": "آدعية للقيام بالخير",
      "text": "اللهم اجعلني سبب خير للناس",
      "source": "دعاء عام"
    },
    {
      "id": 98,
      "category": "آدعية للشكر",
      "text": "اللهم لك الحمد كما ينبغي لجلال وجهك وعظيم سلطانك",
      "source": "دعاء شكر"
    },
    {
      "id": 99,
      "category": "آدعية للمغفرة",
      "text": "اللهم تقبل منا أعمالنا",
      "source": "دعاء عام"
    },
    {
      "id": 100,
      "category": "سنة",
      "text": "اللهم إني أسألك الهدى والتقى والعفاف والغنى",
      "source": "حديث صحيح"
    },
    {
      "id": 101,
      "category": "سنة",
      "text": "اللهم مصرف القلوب صرف قلوبنا على طاعتك",
      "source": "صحيح"
    },
    {
      "id": 102,
      "category": "سنة",
      "text": "اللهم إني أعوذ بك من الهم والحزن والعجز والكسل",
      "source": "صحيح"
    },
    {
      "id": 103,
      "category": "سنة",
      "text": "اللهم آت نفسي تقواها وزكّها أنت خير من زكّاها",
