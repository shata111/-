    },
    {
      "id": 140,
      "text": "الحياء شعبة من الإيمان",
      "source": "صحيح البخاري"
    },
    {
      "id": 141,
      "text": "من دعا إلى هدى كان له من الأجر مثل أجور من تبعه",
      "source": "حديث حسن"
    },
    {
      "id": 142,
      "text": "خير الناس أنفعهم للناس",
      "source": "حديث حسن"
    },
    {
